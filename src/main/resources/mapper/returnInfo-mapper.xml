<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nowcoder.community.dao.ReturnInfoMapper">


    <sql id="selectFields">
        id,resp_code,resp_info,sys_code
    </sql>

    <sql id="insertFields">
        email,verify_code,verify_message,usable,status,create_time
    </sql>

    <select id="selectReturnInfoByCode" resultType="ReturnInfo">
        select <include refid="selectFields"></include>
        from tb_resp_code
        where resp_code = #{respCode}
        LIMIT 1
    </select>

    <insert id="insertRegisterMessage" parameterType="TbRegisterMessage" keyProperty="id">
        insert into tb_regist_message (<include refid="insertFields"></include>)
        values(#{email}, #{verifyCode}, #{verifyMessage}, #{usable}, #{status}, #{createTime})
    </insert>

    <select id="selectDiscussPostRows" resultType="int">
        select count(id)
        from discuss_post
        where status != 2
        <if test="userId!=0">
            and user_id = #{userId}
        </if>

    </select>

</mapper>